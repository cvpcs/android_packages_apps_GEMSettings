<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:cvpcs="http://schemas.cvpcs.org/apk/res/android">

    <PreferenceCategory
        android:title="@string/title_general">
 
        <CheckBoxPreference
            android:key="display_adb_usb_debugging_notif"
            android:title="@string/title_general_display_adb_usb_debugging_notif"
            android:summaryOn="@string/summary_on_general_display_adb_usb_debugging_notif"
            android:summaryOff="@string/summary_off_general_display_adb_usb_debugging_notif" />

        <CheckBoxPreference
            android:key="display_notification_led_screen_on"
            android:title="@string/title_general_display_notification_led_screen_on"
            android:summaryOn="@string/summary_on_general_display_notification_led_screen_on"
            android:summaryOff="@string/summary_off_general_display_notification_led_screen_on" />

        <org.cvpcs.android.gem_settings.utils.SeekBarStepPreference
            android:key="auto_brightness_minimum_backlight_level"
            android:title="@string/title_general_auto_brightness_minimum_backlight_level"
            android:summary="@string/summary_general_auto_brightness_minimum_backlight_level"
            cvpcs:dialogMessage="Auto brightness minimum"
            cvpcs:prefixText="Level "
            cvpcs:defaultValue="16"
            cvpcs:steps="@array/steps_general_auto_brightness_minimum_backlight_level" />

        <ListPreference
            android:key="display_lockscreen_music_controls"
            android:title="@string/title_display_lockscreen_music_controls"
            android:summary="@string/summary_display_lockscreen_music_controls"
            android:entries="@array/entries_display_lockscreen_music_controls"
            android:entryValues="@array/entryValues_display_lockscreen_music_controls" />

    </PreferenceCategory>

    <PreferenceScreen android:key="performance"
        android:title="@string/title_performance"
        android:summary="@string/summary_performance">
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="org.cvpcs.android.gem_settings"
            android:targetClass="org.cvpcs.android.gem_settings.activities.Performance" />
    </PreferenceScreen>

    <PreferenceScreen android:key="dspmanager"
        android:title="@string/title_dspmanager"
        android:summary="@string/summary_dspmanager">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.bel.android.dspmanager"
            android:targetClass="com.bel.android.dspmanager.DSPManager" />
    </PreferenceScreen>

    <PreferenceScreen android:key="ui_tweaks"
        android:title="@string/title_ui_tweaks"
        android:summary="@string/summary_ui_tweaks">
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="org.cvpcs.android.gem_settings"
            android:targetClass="org.cvpcs.android.gem_settings.activities.UITweaks" />
    </PreferenceScreen>

</PreferenceScreen>
